  "version": "0.3.2",
  "description": "JavaScript / TypeScript client for https://lorcana-api.com/",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/",
